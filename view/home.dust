<!DOCTYPE html>
<html>
<head>
    <title>{title}</title>
    <link rel="stylesheet" href="{@assetPath src="main.css"/}"/>
</head>

<body>

  <div class="fixed">
    <img id="main-image" class="col-1" src="{@assetPath src="hell-b.png"/}" alt="main-image" />
  </div>

  <div class="container-1">

    <div id="headline">
      <h1 class="caps white">{headline|s}</h1>
      <h2>{dek|s}</h2>
    </div>

    <img class="col-2" src="{@assetPath src="hell.png"/}" alt="" />

    <div class="col-2-text paddinglg grey right clear-right">
      <h3 class="white">{hellHead}</h3>
      <p class="white">{hellText}</p>
    </div>

    <img class="col-2 right" src="{@assetPath src="christ.png"/}" alt="" />

    <div class="col-2-text paddingsm blue">
      <h3 class="white">{christHead}</h3>
      <p class="white">{christText}</p>
    </div>

    <img class="col-2" src="{@assetPath src="christ-b.png"/}" alt="" />

    <img class="col-1" src="{@assetPath src="chernobyl.png"/}" alt="" />

    <div class="col-1-text paddingsm grey">
      <h3 class="white">{ukraineHead}</h3>
      <p class="white">{ukraineText}</p>
    </div>

    <img class="col-2" src="{@assetPath src="dolls-b.png"/}" alt="" />

    <div class="col-2-text paddinglg blue right">
      <h3 class="white">{dollHead}</h3>
      <p class="white">{dollText}</p>
    </div>

    <img class="col-2" src="{@assetPath src="dolls.png"/}" alt="" />

  </div> 

<script src="{@assetPath src="main.js"/}"></script>
</body>
</html>