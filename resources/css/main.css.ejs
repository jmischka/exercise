@import url(https://fonts.googleapis.com/css?family=Six+Caps);
@import url(https://fonts.googleapis.com/css?family=Open+Sans:400,300);

* {
  margin: 0;
}

* {
  -moz-box-sizing: border-box;
  box-sizing: border-box;
}

body {
    background-color: #000000;
}

/*////////// TEXT //////////*/

h1 {
  font-family: 'Six Caps', sans-serif;
  font-size: 125px;
  text-align: left;
  line-height: 115px;
  letter-spacing: 2px;
}

h2 {
  font-family: 'Six Caps', sans-serif;
  font-size: 48px;
  text-align: left;
  line-height: 43px;
}

h3 {
  font-family: 'Six Caps', sans-serif;
  font-size: 36px;
  line-height: 24px;
  letter-spacing: 2px;
  text-align: left;
  margin-bottom: 20px;
}

p {
  font-family: 'Open Sans', sans-serif;;
  font-size: 16px;
  font-weight: 400;
  text-align: left;
}

/*////////// STYLE //////////*/

#headline {
  position: absolute;
  top: 105px;
  margin-left: 75px;
  margin-bottom: 300px;
}

#background-image {
  margin-top: 0;
  width: 1200px;
  height: 700px;
}

.caps {
  text-transform: uppercase;
}

.white {
  color: #FFFFFF;
}

/*////////// COLUMNS WIDTH //////////*/

.col-1 {
  width: 100%;
}

.col-2 {
  width: 50%;
}

/*////////// COLUMNS-TEXT //////////*/

.col-1-text {
  width: 100%;
}

.col-2-text {
  width: 50%;
}

.paddingsm {
  padding: 47px;
}

.paddinglg {
  padding: 48.5px;
}

.red {
  background-color: rgb(166,20,3);
}

.blue {
  background-color: rgb(7,216,242);
}

.grey {
  background-color: rgb(116,135,139);
}

/*/////////////////////////////////*/

.fixed{
  position: fixed;
  width: 1080px;
  top: 0;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: -1
}

.container-1 {
  background-color: #000000;
  margin: 740px auto 25px;
  width: 1080px;
}

.right {
  float: right;
}

.clear-right {
  clear: right;
}

